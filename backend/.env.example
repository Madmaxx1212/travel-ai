# Groq LLM
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama3-8b-8192
GROQ_SMART_MODEL=mixtral-8x7b-32768

# Database
DATABASE_URL=sqlite:///./data/travel_guardian.db
SQLITE_DB_PATH=./data/travel_guardian.db

# Security
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=10080

# App
APP_ENV=development
DEBUG=true
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ML Model Paths
MODEL_PATH=./ml/models/xgboost_delay_model.pkl
ENCODER_PATH=./ml/models/label_encoders.pkl
FAISS_FLIGHTS_PATH=./data/faiss/flights
FAISS_HOTELS_PATH=./data/faiss/hotels
FAISS_CITY_PATH=./data/faiss/city

# Rate Limiting
GROQ_MAX_RETRIES=3
GROQ_RETRY_DELAY=2
